@model List<Todo>
@{
}

<div>
    <a asp-area="" asp-controller="Todo" asp-action="Create" class=""btn btn-primary">Todo</a>

</div>
@if (Model.Count() > 0)
{
        <table class="table table-hover table-striped">
            <thead>
                <th>
                    <td>
                        id
                    </td>
                    <td>Name</td>
                    <td>Date</td>
                   <td>Description</td>
                    <td>Is Finshed</td>
                </th>
            </thead>
              <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Id</td>
                          <td>@item.Name</td>
                          <td>@item.Description</td>
                            <td>@item.IsFineshed</td>
                          <td>@item.CreatedDate</td>
                          <td> <a asp-controller="Todo" asp-action="Update" class="btn btn-info">Update</a></td>
                            <td><a asp-controller="Todo" asp-action="Delete" class="btn btn-primary">Delete</a></td>
                        </tr>
            }
            </tbody>


        </table>
}
else
{
        <div class="mt-4 bg-light">
            <h3> not ToDos add yet!</h3>
        </div>
}